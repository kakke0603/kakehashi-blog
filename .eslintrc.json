{
  "$schema": "https://json.schemastore.org/eslintrc",
  "root": true,
  "extends": [
    "next/core-web-vitals",
    "prettier",
    "plugin:tailwindcss/recommended",
    "plugin:next-on-pages/recommended"
  ],
  "plugins": ["tailwindcss","next-on-pages"],
  "rules": { "@next/next/no-img-element": "off" , "next-on-pages/no-unsupported-configs": "warn"},
  "settings": {
    "tailwindcss": { "callees": ["cn"], "config": "tailwind.config.js" },
    "next": { "rootDir": true }
  },
  "overrides": [
    { "files": ["*.ts", "*.tsx"], "parser": "@typescript-eslint/parser" }
  ]
}
